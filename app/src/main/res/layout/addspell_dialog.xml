<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell Name: "/>
        <EditText
            android:id="@+id/spellNameIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Spell Name Here"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Spell Level: " />
        <Spinner
            android:id="@+id/splvlDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell Description:" />

        <EditText
            android:id="@+id/spellDescIn"
            android:layout_width="275dp"
            android:layout_height="200dp"
            android:hint ="Type Spell Description here"/>
    </LinearLayout>


</LinearLayout>