<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell Name: "/>
        <EditText
            android:id="@+id/spellNameIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Spell Name Here"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Spell Level: " />
        <Spinner
            android:id="@+id/splvlDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="25sp">

        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="Does spell Roll to hit?\n(tick radio button for yes)"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/toCombatRadioSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell Damage: " />

        <EditText
            android:id="@+id/spellDmgDieNumIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint ="number of die"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="d"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/spellDmgDieTypeIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="type of die"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell Damage Type:" />

        <EditText
            android:id="@+id/spellDmgTypeIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint ="Damage Type here,\n leave empty if N/A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell Description:" />

        <EditText
            android:id="@+id/spellDescIn"
            android:layout_width="275dp"
            android:layout_height="200dp"
            android:hint ="Type Spell Description here"/>
    </LinearLayout>


</LinearLayout>