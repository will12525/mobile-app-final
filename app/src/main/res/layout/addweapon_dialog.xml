<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10sp"
    android:layout_gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="Weapon Name: "
            android:textSize="25sp" />

        <EditText
            android:id="@+id/addWepName"
            android:minHeight="35dp"
            android:gravity="center"
            android:background="@drawable/text_input_border"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:hint="Weapon Name"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="25sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:gravity="bottom"
        android:text="Weapon Weight: " />

    <EditText
        android:id="@+id/addWepWeight"
        android:minHeight="35dp"
        android:gravity="center"
        android:background="@drawable/text_input_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Weapon Weight"
        android:inputType="numberDecimal"
        android:textSize="15sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="25sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Weapon Damage: "
            android:textSize="25sp" />

        <EditText
            android:id="@+id/addWepDieCount"
            android:minHeight="35dp"
            android:background="@drawable/text_input_border"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:textSize="15sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            android:text="d"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/addWepDieType"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_input_border"
            android:inputType="number"
            android:minHeight="35dp"
            android:textSize="15sp"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="25sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:text="Damage Type: " />

        <EditText
            android:id="@+id/addWepDamageType"
            android:background="@drawable/text_input_border"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Type of Damage"
            android:textSize="15sp"
            android:gravity="center"
            android:minHeight="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="25sp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="Item Value: "
            android:textSize="25sp" />

        <EditText
            android:id="@+id/addWepValue"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_input_border"
            android:minHeight="30dp"
            android:textSize="25sp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Description"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/addWepDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Extra Info"
        android:textSize="15sp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/text_input_border"/>

</LinearLayout>